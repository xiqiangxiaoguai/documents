<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/direction_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/float_bar_direction_up" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/float_bar_bg"
        android:padding="0dip" >

        <ImageButton
            android:id="@+id/delete"
            android:layout_width="75px"
            android:layout_height="55px"
            android:background="@drawable/float_bar_item_bg_left"
            android:padding="0dip"
            android:src="@drawable/float_item_delete" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/float_btn_divider"/>

        <ImageButton
            android:id="@+id/zoom_out"
            android:layout_width="75px"
            android:layout_height="55px"
            android:background="@drawable/float_bar_item_bg_center"
            android:padding="0dip"
            android:src="@drawable/float_item_zoom_out" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/float_btn_divider"/>

        <ImageButton
            android:id="@+id/zoom_in"
            android:layout_width="75px"
            android:layout_height="55px"
            android:background="@drawable/float_bar_item_bg_right"
            android:padding="0dip"
            android:src="@drawable/float_item_zoom_in" />
    </LinearLayout>

    <ImageView
        android:id="@+id/direction_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-4dip"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/float_bar_direction_down" />

</LinearLayout>